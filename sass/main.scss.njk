{% set palette = site.params.palettes[site.params.palette].sass %}

$color_default: {{ palette.default }};
$color_light: {{ palette.light }};
$color_medium: {{ palette.medium }};
$color_dark: {{ palette.dark }};
$color_active: {{ palette.active }};
$color_active_light: {{ palette.active_light }};
$color_active_medium: {{ palette.active_medium }};
$color_active_dark: {{ palette.active_dark }};
$color_dark_grey: {{ palette.dark_grey }};
$color_light_grey: {{ palette.light_grey }};

$background_images_primary: url({{ palette.bg_image_primary_fallback }});
$background_images_primary_opt: url({{ palette.bg_image_primary_optimized }});

$background_images_secondary: url({{ palette.bg_image_secondary_fallback }});
$background_images_secondary_opt: url({{ palette.bg_image_secondary_optimized }});

$background_images_product: url({{ palette.bg_image_product_fallback }});
$background_images_product_opt: url({{ palette.bg_image_product_optimized }});

$background_images_cart: url({{ palette.bg_image_cart_fallback }});
$background_images_cart_opt: url({{ palette.bg_image_cart_optimized }});

$font_size_small: 18px;
$font_size_xxlarge: 64px;
$font_size_xlarge: 48px;
$font_size_large: 32px;
$font_size_medium: 24px;
$font_size_regular: 20px;
$font_size_small: 16px;

$font_family_primairy: 'Open Sans', sans-serif;
$font_family_secondary: 'Lato', sans-serif;

* {
    box-sizing: border-box;
}

body {
    overflow-x: hidden;
    margin: 0;
    padding: 0;
}

a {
    text-decoration: none;
    color: inherit;
}

figure {
    margin: 0;
    padding: 0;
}

